<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<% if (errors.length > 0) { %>
    <div class="alert alert-danger">
        <% errors.forEach(function(error) { %>
            <p><%= error %></p>
        <% }); %>
    </div>
<% } %>

<!-- Exibir mensagens de sucesso -->
<% if (success.length > 0) { %>
    <div class="alert alert-success">
        <% success.forEach(function(message) { %>
            <p><%= message %></p>
        <% }); %>
    </div>
<% } %>


<div class="container mt-4">
    <h2>Lista de Pedidos</h2>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID do Pedido</th>
                <th>Nome do Cliente</th>
                <th>Data e Hora do Pedido</th>
            </tr>
        </thead>
        <tbody>
            <% pedidos.forEach((pedido) => { %>
                <tr onclick="window.location.href='/pedido/<%= pedido._id %>'" style="cursor:pointer;"class="clickable-row">
                    <td><%= pedido.pedidoId %></td>
                    <td><%= pedido.cliente %></td>
                    <td><%= new Date(pedido.data).toLocaleDateString() %> <%= new Date(pedido.data).toLocaleTimeString() %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('includes/footer'); %>
